@Library("Shared") _
pipeline {
   agent { label 'pilot' }
    stages {
        stage("hello") {
            steps {
                script {
                    hello()
                }
            }
        }
stage("Cloning") { 
            steps {        
                 script{      
                clone('https://github.com/shrutisakharkar/Health_Insurance.git','main') 
                   } 
            }
        }
        stage('build') {
            steps {
                script {
                  dir('Frontend') {
                   sh  "docker build -t  health-insurance:latest ."
                }
            }
        }
    }
        stage("push to dockerhub") {
            steps {
                script {
                    docker_push(" health-insurance", "latest", "shrutisakharkar")
                }
            }
        }
        stage('deploying') {
            steps {
                echo "deploying"
                sh "docker compose up -d"
            }
        }
    }
}
